<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.example.android.movies_app.Activities.MainActivity">

    <!--
    This layout is a two-pane layout for the Items master/detail flow.
    -->


    <fragment
        android:id="@+id/main_Activity_Fragment"
        android:name="com.example.android.movies_app.Fragments.PopularFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        />



    <FrameLayout
        android:id="@+id/activity_movie_details"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6" />

</LinearLayout>